{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": true
  },
  "files": [
    "types.d.ts"
  ]
}
